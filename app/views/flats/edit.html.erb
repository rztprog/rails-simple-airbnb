<div class="container">
  <h1>Edit flat</h1>
  <%= simple_form_for(@flat) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :picture %>
    <%= f.input :price_per_night %>
    <%= f.input :number_of_guests %>
  <div class="mt-2">
      <%= f.submit class: "btn btn-primary" %>
    <% end %>

    <%= link_to flat_path(@flat), class: "btn btn-danger", 
      method: :delete,
      data: { confirm: "Are you sure you want to delete this flat?" } do %>
      <i class="fas fa-trash-alt"></i> Delete
    <% end %>

    <%= link_to flat_path(@flat), class: "btn btn-secondary" do %>
      <i class="fas fa-undo-alt"></i> Back to flat
    <% end %>
  </div>
</div>
